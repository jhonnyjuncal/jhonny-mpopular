<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b2b2b2"
    android:orientation="vertical"
    tools:context=".PrincipalActivity" >
	
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:orientation="horizontal" >
	    
    	<TextView
    	    android:id="@+id/opc_textView1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_gravity="center_vertical"
    	    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    	    android:text="@string/txt_cargando"
    	    android:textSize="18sp"
    	    android:textStyle="bold" />
    	    
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="5dp"
	    android:background="@drawable/ext_linea"
	    android:orientation="horizontal" />
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:clickable="true"
	    android:onClick="muestraBuscador"
	    android:orientation="horizontal" >
		
		<ImageView
		    android:id="@+id/opc_imageView1"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:contentDescription="@string/txt_cargando"
		    android:src="@drawable/search11" />
		
		<TextView
		    android:id="@+id/opc_textView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:text="@string/label_buscador"
		    android:textSize="18sp" />
		
	</LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:clickable="true"
	    android:onClick="muestraMisRedes"
	    android:orientation="horizontal" >
		
		<ImageView
		    android:id="@+id/opc_imageView2"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:contentDescription="@string/txt_cargando"
		    android:src="@drawable/network" />
		
		<TextView
		    android:id="@+id/opc_textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:text="@string/label_mis_redes"
		    android:textSize="18sp" />
		
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="5dp"
	    android:background="@drawable/ext_linea"
	    android:orientation="horizontal" />
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:clickable="true"
	    android:orientation="horizontal" >
		
		<ImageView
		    android:id="@+id/opc_imageView3"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:contentDescription="@string/txt_cargando"
		    android:src="@drawable/settings_blue" />
		
		<TextView
		    android:id="@+id/opc_textView4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:text="@string/title_activity_configuracion"
		    android:textSize="18sp" />
		
	</LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:clickable="true"
	    android:onClick="muestraAcercaDeMpopular"
	    android:orientation="horizontal" >
		
		<ImageView
		    android:id="@+id/opc_imageView4"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:contentDescription="@string/txt_cargando"
		    android:src="@drawable/ic_menu_acerca" />
		
		<TextView
		    android:id="@+id/opc_textView5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:text="@string/label_acerca_de"
		    android:textSize="18sp" />
		
	</LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:clickable="true"
	    android:onClick="muestraTerminosCondiciones"
	    android:orientation="horizontal" >
		
		<ImageView
		    android:id="@+id/opc_imageView5"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:contentDescription="@string/txt_cargando"
		    android:src="@drawable/favorite" />
		
		<TextView
		    android:id="@+id/opc_textView6"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:text="@string/title_activity_terminos"
		    android:textSize="18sp" />
		
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="5dp"
	    android:background="@drawable/ext_linea"
	    android:orientation="horizontal" />
</LinearLayout>
