<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gris_claro"
    tools:context=".AcercaActivity" >

    <ImageView
        android:id="@+id/acer_imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/txt_cargando"
        android:src="@drawable/lanzador" />

    <TextView
        android:id="@+id/acer_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/acer_imageView1"
        android:text="@string/label_version"
        android:textSize="@dimen/tamano_fuente" />

    <TextView
        android:id="@+id/acer_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/acer_textView1"
        android:text="@string/txt_cargando"
        android:textSize="@dimen/tamano_fuente" />

    <TextView
        android:id="@+id/acer_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/acer_imageView1"
        android:text="@string/label_creacion"
        android:textSize="@dimen/tamano_fuente" />

    <TextView
        android:id="@+id/acer_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/acer_textView3"
        android:text="@string/txt_cargando"
        android:textSize="@dimen/tamano_fuente" />

    <TextView
        android:id="@+id/acer_textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/acer_imageView1"
        android:text="@string/label_pais"
        android:textSize="@dimen/tamano_fuente" />

    <TextView
        android:id="@+id/acer_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/acer_textView5"
        android:text="@string/txt_pais"
        android:textSize="@dimen/tamano_fuente" />

    <TextView
        android:id="@+id/acer_textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acer_imageView1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/label_desarrollado"
        android:textSize="@dimen/tamano_fuente" />

    <TextView
        android:id="@+id/acer_textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acer_textView7"
        android:layout_marginLeft="30dp"
        android:text="@string/txt_desarrollador"
        android:textStyle="bold"
        android:textSize="@dimen/tamano_fuente" />
    
    <LinearLayout
	    android:id="@+id/linearLayout2"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:orientation="vertical"
	    android:weightSum="1" />

    <TextView
        android:id="@+id/acer_textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@id/acer_imageView1"
        android:gravity="center_horizontal"
        android:text="@string/label_version1"
        android:textSize="@dimen/tamano_fuente" />
		
    <TextView
        android:id="@+id/acer_textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@id/acer_imageView1"
        android:gravity="center_horizontal"
        android:text="@string/label_version2"
        android:textSize="@dimen/tamano_fuente" />

    <ImageView
        android:id="@+id/acer_imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/acer_textView8"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/txt_cargando"
        android:src="@drawable/ic_facebook" />
	
</RelativeLayout>