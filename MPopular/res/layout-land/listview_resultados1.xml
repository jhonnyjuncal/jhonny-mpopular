<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearDetalle1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@layout/fondo_detalle"
    android:orientation="vertical"
    android:padding="5dp" >
	
    <LinearLayout
        android:id="@+id/linearDetalle2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

		<TextView
		    android:id="@+id/usuarionombre"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:paddingBottom="1dip"
		    android:paddingTop="1dip"
		    android:text="@string/txt_cargando"
		    android:textColor="@color/blanco"
		    android:textSize="@dimen/tamano_fuente"
		    android:textStyle="normal|italic|bold" />

	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="4dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/ext_linea"
	    android:orientation="horizontal" />
	
    <LinearLayout
        android:id="@+id/linearDetalle3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<TextView
		    android:layout_width="72dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:paddingBottom="1dip"
		    android:paddingTop="1dip"
		    android:text="@string/label_usuario"
		    android:textColor="@color/blanco"
		    android:textSize="@dimen/tamano_fuente"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/cuentanombre"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="2dp"
		    android:paddingBottom="1dip"
		    android:paddingTop="1dip"
		    android:text="@string/txt_cargando"
		    android:textColor="@color/blanco"
		    android:textSize="@dimen/tamano_fuente"
		    android:textStyle="normal" />

	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/linearDetalle4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<TextView
		    android:layout_width="56dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:paddingBottom="1dip"
		    android:paddingTop="1dip"
		    android:text="@string/label_red"
		    android:textColor="@color/blanco"
		    android:textSize="@dimen/tamano_fuente"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/rednombre"
		    android:layout_width="140dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="3dp"
		    android:layout_marginRight="3dp"
		    android:paddingBottom="1dip"
		    android:paddingTop="1dip"
		    android:text="@string/txt_cargando"
		    android:textColor="@color/blanco"
		    android:textSize="@dimen/tamano_fuente"
		    android:textStyle="normal" />

		<TextView
		    android:layout_width="58dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="2dp"
		    android:paddingBottom="1dip"
		    android:paddingTop="1dip"
		    android:text="@string/label_pais"
		    android:textColor="@color/blanco"
		    android:textSize="@dimen/tamano_fuente"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/usuariopais"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="1dip"
		    android:paddingTop="1dip"
		    android:text="@string/txt_cargando"
		    android:textColor="@color/blanco"
		    android:textSize="@dimen/tamano_fuente"
		    android:textStyle="normal" />

	</LinearLayout>
</LinearLayout>