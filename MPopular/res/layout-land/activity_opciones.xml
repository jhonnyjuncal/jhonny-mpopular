<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gris_claro"
    android:orientation="vertical"
    tools:context=".PrincipalActivity" >
	
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="35dp"
	    android:orientation="horizontal" >
	    
    	<TextView
    	    android:id="@+id/opc_textView1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_gravity="center_vertical"
    	    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    	    android:text="@string/txt_cargando"
    	    android:textSize="18sp"
    	    android:textStyle="bold" />
    	    
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="5dp"
	    android:background="@drawable/ext_linea"
	    android:orientation="horizontal" />
	
	
	
	<LinearLayout
	    android:id="@+id/opc_layout_busq"
	    android:layout_width="fill_parent"
	    android:layout_height="35dp"
	    android:clickable="true"
	    android:onClick="muestraBuscador"
	    android:orientation="horizontal" >
		
		<ImageView
		    android:id="@+id/opc_imageView1"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:contentDescription="@string/txt_cargando"
		    android:src="@drawable/ic_buscar" />
		
		<TextView
		    android:id="@+id/opc_textView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:text="@string/label_buscador"
		    android:textSize="17sp" />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="5dp"
	    android:background="@drawable/ext_linea"
	    android:orientation="horizontal" />
	
	

	<LinearLayout
	    android:id="@+id/opc_layout_redes"
	    android:layout_width="fill_parent"
	    android:layout_height="35dp"
	    android:clickable="true"
	    android:onClick="muestraMisRedes"
	    android:orientation="horizontal" >
		
		<ImageView
		    android:id="@+id/opc_imageView2"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:contentDescription="@string/txt_cargando"
		    android:src="@drawable/ic_mis_redes" />
		
		<TextView
		    android:id="@+id/opc_textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:text="@string/label_mis_redes"
		    android:textSize="17sp" />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="5dp"
	    android:background="@drawable/ext_linea"
	    android:orientation="horizontal" />
	
	<LinearLayout
	    android:id="@+id/opc_layout_conf"
	    android:layout_width="fill_parent"
	    android:layout_height="35dp"
	    android:clickable="true"
	    android:onClick="muestraConfiguracionApp"
	    android:orientation="horizontal" >
		
		<ImageView
		    android:id="@+id/opc_imageView3"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:contentDescription="@string/txt_cargando"
		    android:src="@drawable/ic_configuracion" />
		
		<TextView
		    android:id="@+id/opc_textView4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:text="@string/title_activity_configuracion"
		    android:textSize="17sp" />
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/opc_layout_acerca"
	    android:layout_width="fill_parent"
	    android:layout_height="35dp"
	    android:clickable="true"
	    android:onClick="muestraAcercaDeMpopular"
	    android:orientation="horizontal" >
		
		<ImageView
		    android:id="@+id/opc_imageView4"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:contentDescription="@string/txt_cargando"
		    android:src="@drawable/ic_acerca" />
		
		<TextView
		    android:id="@+id/opc_textView5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:text="@string/label_acerca_de"
		    android:textSize="17sp" />
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/opc_layout_terminos"
	    android:layout_width="fill_parent"
	    android:layout_height="35dp"
	    android:clickable="true"
	    android:onClick="muestraTerminosCondiciones"
	    android:orientation="horizontal" >
		
		<ImageView
		    android:id="@+id/opc_imageView5"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:contentDescription="@string/txt_cargando"
		    android:src="@drawable/ic_terminos" />
		
		<TextView
		    android:id="@+id/opc_textView6"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="@dimen/activity_horizontal_margin"
		    android:text="@string/label_terminos"
		    android:textSize="17sp" />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="5dp"
	    android:background="@drawable/ext_linea"
	    android:orientation="horizontal" />
	
</LinearLayout>
